<body>
  <div class="popup">
    <h3><span id="raised">$7,430</span> raised of $10,000</h3>
    <div class="progress-bar">
      <div id="progress" class="progress"></div>
    </div>
    <button class="donate-btn" onclick="makeDonation()">Donate Now</button>
  </div>

  <script>
    let raised = 7430;
    const goal = 10000;

    function updateProgress() {
      const percent = Math.min((raised / goal) * 100, 100);
      document.getElementById('progress').style.width = percent + '%';
      document.getElementById('raised').textContent = `$${raised.toLocaleString()}`;
    }

    function makeDonation() {
      const donation = Math.floor(Math.random() * 500) + 50; // random donation for demo
      raised += donation;
      updateProgress();
      alert(`Thank you for donating $${donation.toLocaleString()}!`);
    }

    updateProgress();
  </script>
</body>
</html>
